<%var options = {hour12:'false', weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };%>
<ul class="list-group">
    <% for(var i=items.length-1; i >= 0; i--) {%>
    <li class="list-group-item">
        <%if (items[i].retweet == 1) {%>
        <i><%= items[i].createdAt.toLocaleDateString("en-US", options)%> by <b><%= items[i].users[0].username%></b></i> <span class="badge badge-secondary">retweet</span>
        <br>
        <a href="/signin" class="custom-card">
        <div class="card" style="width:auto;">
            <div class="card-body">
                <h6 class="card-title">
                    <i><%=items[items[i].parentId-1].createdAt.toLocaleDateString("en-US", options)%> by
                    <b> <%=items[items[i].parentId-1].users[0].username%> </b></i></h6>
                <p class="card-text"><%= items[i].text %></p>
            </div>
        </div>
        </a>
            <%var link = "/message/" + items[i].id%>
            <a href=<%=link%> class="btn btn-default"><span class="fas fa-comments"></span></a>
        <%} else {%>
        <i><%= items[i].createdAt.toLocaleDateString("en-US", options)%> by <b><%= items[i].users[0].username%></b></i>
        <br>
        <%var link = "/message/" + items[i].id%>
        <%= items[i].text %>
        <br>
        <a href=<%=link%> class="btn btn-default"><span class="fas fa-comments"></span></a>
        <%}%>
    </li>
    <% } %>
</ul>